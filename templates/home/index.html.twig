{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
{# {{dump(post.titre)}} #}
	<div class="container">
		<div class="row">
			{% for post in posts %}
				<div class="col-md-4">
					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src="" alt="Card image cap">
						<div class="card-body">
							<h5 class="card-title">{{post.titre}}</h5>
							<p class="card-text">{{post.contenu}}</p>
              <p class="card-text">{{post.auteur}}</p>
              <p class="card-text">{{post.date | date("d/m/Y")}}</p>
							<a href="post/{{post.id}}" class="btn btn-primary">Voir l'article</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
